<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.creatingahabit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="@string/add_title"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".DescriptionActivity"
            ></activity>
        <!-- parentActivityName describes the parent. MenuBar back button will revert to the parent Activity-->
        <activity
            android:name=".EditHabitActivity"
            android:label="@string/add_title"
            android:parentActivityName=".MainActivity"></activity>

    </application>

</manifest>